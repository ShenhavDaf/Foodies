<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/logInFragment">
    <fragment
        android:id="@+id/homePage"
        android:name="com.example.foodies.HomePageFragment"
        android:label="Home Page"
        tools:layout="@layout/fragment_home_page" >
        <action
            android:id="@+id/action_homePage_to_newPostFragment"
            app:destination="@id/newPostFragment" />
        <action
            android:id="@+id/action_homePage_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/logInFragment"
        android:name="com.example.foodies.LogInFragment"
        android:label="Log In"
        tools:layout="@layout/fragment_log_in">
        <action
            android:id="@+id/action_logInFragment_to_homePage"
            app:destination="@id/homePage" />
        <action
            android:id="@+id/action_logInFragment_to_signIn"
            app:destination="@id/signIn" />
    </fragment>
    <fragment
        android:id="@+id/signIn"
        android:name="com.example.foodies.SignInFragment"
        android:label="Sign Up"
        tools:layout="@layout/fragment_sign_in" />
    <fragment
        android:id="@+id/newPostFragment"
        android:name="com.example.foodies.NewPostFragment"
        android:label="fragment_new_post"
        tools:layout="@layout/fragment_new_post" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.foodies.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>